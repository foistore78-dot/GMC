
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      // In a real app, this would check a custom claim or a document in a 'roles' collection.
      // For this demo, we are checking the admin's specific email address.
      // This is more secure than no check, but role-based access control is the best practice.
      return request.auth.token.email == "garage.music.club2024@gmail.com";
    }

    // ----------------------------------------------------------------------
    // Collection Rules
    // ----------------------------------------------------------------------

    /**
     * @description Public can create membership requests. Admins can manage them.
     * @path /membership_requests/{membershipRequestId}
     */
    match /membership_requests/{membershipRequestId} {
      allow create: if true; // Anyone can submit the form
      allow read, update, delete: if isSignedIn() && isAdmin();
    }

    /**
     * @description Admins can read and write to the members collection.
     * @path /members/{memberId}
     */
    match /members/{memberId} {
      allow read, write: if isSignedIn() && isAdmin();
    }

    /**
     * @description Nobody can access this collection. It's not used.
     * @path /roles_admin/{adminId}
     */
    match /roles_admin/{adminId} {
      allow read, write: if false; 
    }
  }
}
