
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Collection Rules
    // ----------------------------------------------------------------------

    /**
     * @description Public can create membership requests, but not read/update/delete them.
     * @path /membership_requests/{membershipRequestId}
     */
    match /membership_requests/{membershipRequestId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    /**
     * @description Nobody can directly access the members collection.
     * @path /members/{memberId}
     */
    match /members/{memberId} {
      allow read, write: if false;
    }

    /**
     * @description Manages admin role documents. Access is denied as it's no longer used.
     * @path /roles_admin/{adminId}
     */
    match /roles_admin/{adminId} {
      allow read, write: if false; 
    }
  }
}
