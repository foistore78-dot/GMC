
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Collection Rules
    // ----------------------------------------------------------------------

    /**
     * @description Controls access to membership requests. Allows anyone to create, read, and write.
     * @path /membership_requests/{membershipRequestId}
     */
    match /membership_requests/{membershipRequestId} {
      allow read, write: if true;
    }

    /**
     * @description Manages the collection of official club members. Allows anyone to create, read, and write.
     * @path /members/{memberId}
     */
    match /members/{memberId} {
      allow read, write: if true;
    }

    /**
     * @description Manages admin role documents. Access is denied as it's no longer used.
     * @path /roles_admin/{adminId}
     */
    match /roles_admin/{adminId} {
      allow read, write: if false; 
    }
  }
}
